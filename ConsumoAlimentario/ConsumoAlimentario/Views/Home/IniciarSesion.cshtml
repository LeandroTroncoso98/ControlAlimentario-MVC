
@{
    ViewData["Title"] = "IniciarSesion";
    Layout = "~/Views/Shared/_Registro.cshtml";
}
<div class="container-fluid ">
    <div class="row justify-content-center align-items-center vh-100">
        <div class="col-6">
            <h1 class="TituloRegistro text-center text-md-start">ConsumoDiario .NET</h1>
        </div>
        <div class="col-6 p-2 shadow divIniciarRegistro rounded">
            <form asp-controller="Home" asp-action="IniciarSesion" method="post">
                <div class="row mt-4">
                    <div class="col">
                        <label class ="labelIniciarRegistro">Correo electronico:</label>
                    </div>
                    <div col-12>
                        <input class="input-style mb-3" type="text" placeholder="Alguien@email.com" name="email" />
                    </div>
                </div>
                <div class="row mt-4">
                    <div class="col">
                        <label class="labelIniciarRegistro">Contraseña:</label>
                    </div>
                    <div class="col-12">
                        <input class="input-style mb-3" type="password" placeholder="******" name="password" />
                    </div>
                </div>
                <div class="row d-flex justify-content-center text-center">
                    <div class="col-12 ">
                        <button type="submit" class="button-verde text-uppercase">Ingresar</button>
                    </div>
                </div>
                
                
                @if (ViewData["Mensaje"] != null)
                {
                    <div class="form-group mt-1">
                        <div class="alert alert-danger text-center" role="alert">
                            @ViewData["Mensaje"]
                        </div>
                    </div>
                }
                <div class="row mt-3">
                    <div class="col">
                        <p class=" TienesCuenta">¿No tienes una cuenta? <a href="@Url.Action("Registrarse","Home")">Registrate</a></p>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>