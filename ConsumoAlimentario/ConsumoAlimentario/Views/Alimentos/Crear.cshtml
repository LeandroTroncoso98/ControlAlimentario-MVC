@model ConsumoAlimentario.Models.Alimento
@{
    ViewData["Title"] = "Crear";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<form method="post" action="Crear">
<div class="container">
        <div class="row d-flex justify-content-center align-items-center vh-100">
            <div class="col-6 div-informacion-usuario">
                <div class="row">
                    <div class="col">
                        <h3 class="display-5">Creacion de alimento</h3>
                    </div>
                </div>
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="col-12">
                    <div class="row mt-3">
                        <div class="col-4">
                            <label asp-for="Nombre" class="form-label"></label>
                        </div>
                        <div class="col-8">
                            <input asp-for="Nombre" class="form-control" />
                            <span asp-validation-for="Nombre" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="row mt-3">
                        <div class="col-4">
                            <label asp-for="Calorias" class="form-label"></label>
                        </div>
                        <div class="col-8">
                            <input asp-for="Calorias" class="form-control" value="0" />
                            <span asp-validation-for="Calorias" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="row mt-3">
                        <div class="col-4">
                            <label asp-for="Carbohidratos" class="form-label"></label>
                        </div>
                        <div class="col-8">
                            <input asp-for="Carbohidratos" class="form-control" value="0" />
                            <span asp-validation-for="Carbohidratos" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="row mt-3">
                        <div class="col-4">
                            <label asp-for="Proteina" class="form-label"></label>
                        </div>
                        <div class="col-8">
                            <input asp-for="Proteina" class="form-control" value="0" />
                            <span asp-validation-for="Proteina" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="row mt-3">
                        <div class="col-4">
                            <label asp-for="GrasasTotales" class="form-label"></label>
                        </div>
                        <div class="col-8">
                            <input asp-for="GrasasTotales" class="form-control" value="0" />
                            <span asp-validation-for="GrasasTotales" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="row mt-3">
                        <div class="col-4">
                            <label asp-for="Sodio" class="form-label"></label>
                        </div>
                        <div class="col-8">
                            <input asp-for="Sodio" class="form-control" value="0" />
                        </div>
                    </div>
                    <div class="row mt-3">
                        <div class="col-4">
                            <label asp-for="Potasio" class="form-label"></label>
                        </div>
                        <div class="col-8">
                            <input asp-for="Potasio" class="form-control" value="0" />
                        </div>
                    </div>

                    <div class="row mt-3">
                        <div class="col-4">
                            <label asp-for="Fibra" class="form-label"></label>
                        </div>
                        <div class="col-8">
                            <input asp-for="Fibra" class="form-control" value="0" />
                        </div>
                    </div>
                    <div class="row mt-3">
                        <div class="col-4">
                            <label asp-for="Azucar" class="form-label"></label>
                        </div>
                        <div class="col-8">
                            <input asp-for="Azucar" class="form-control" value="0" />
                        </div>
                    </div>
                    <div class="row mt-3">
                        <div class="col-4">
                            <label asp-for="VitaminaA" class="form-label"></label>
                        </div>
                        <div class="col-8">
                            <input asp-for="VitaminaA" class="form-control" value="0" />
                        </div>
                    </div>
                    <div class="row mt-3">
                        <div class="col-4">
                            <label asp-for="VitaminaC" class="form-label"></label>
                        </div>
                        <div class="col-8">
                            <input asp-for="VitaminaC" class="form-control" value="0" />
                        </div>
                    </div>
                    <div class="row mt-3">
                        <div class="col-4">
                            <label asp-for="Calcio" class="form-label"></label>
                        </div>
                        <div class="col-8">
                            <input asp-for="Calcio" class="form-control" value="0" />
                        </div>
                    </div>
                    <div class="row mt-3">
                        <div class="col-4">
                            <label asp-for="Hierro" class="form-label"></label>
                        </div>
                        <div class="col-8">
                            <input asp-for="Hierro" class="form-control" value="0" />
                        </div>
                    </div>
                    <div class="row mt-3">
                        <div class="col-4">
                            <label asp-for="Cantidad" class="text-center form-label"></label>
                        </div>
                        <div class="col-8">
                            <input asp-for="Cantidad" class="form-control" value="0" />
                            <span asp-validation-for="Cantidad" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="row d-flex justify-content-end mt-5">
                    <div class="col-3">
                        <button type="submit" class="btn btn-success form-control"> Crear</button>
                        &nbsp;
                    </div>
                    <div class="col-3">
                        <a asp-action="Index" class="btn btn-danger form-control"> Volver</a>
                    </div>
                </div>
            </div>
        </div>
</div>
</form>

