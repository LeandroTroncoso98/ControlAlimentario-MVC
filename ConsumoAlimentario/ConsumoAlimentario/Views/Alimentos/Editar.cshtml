@model ConsumoAlimentario.Models.Alimento
@{
    ViewData["Title"] = "Editar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<form method="post" action="Editar">
    <input asp-for="Alimento_Id" hidden="hidden" />
    <input asp-for="Nombre" hidden="hidden" />
    <div class="row px-2 m-xl-2 border">
        <div class="row">
            <div class="col-12">
                <h2 class="text-uppercase">Editar <span class="text-warning">@Model.Nombre</span></h2>
            </div>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        </div>
        <div class="col-6">
            <div class="row mt-3">
                <div class="col-4">
                    <label asp-for="Calorias" class="form-label"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Calorias" class="form-control" />
                    <span asp-validation-for="Calorias" class="text-danger"></span>
                </div>
            </div>
            <div class="row mt-3">
                <div class="col-4">
                    <label asp-for="Carbohidratos" class="form-label"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Carbohidratos" class="form-control"  />
                    <span asp-validation-for="Carbohidratos" class="text-danger"></span>
                </div>
            </div>
            <div class="row mt-3">
                <div class="col-4">
                    <label asp-for="Proteina" class="form-label"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Proteina" class="form-control"  />
                    <span asp-validation-for="Proteina" class="text-danger"></span>
                </div>
            </div>
            <div class="row mt-3">
                <div class="col-4">
                    <label asp-for="GrasasTotales" class="form-label"></label>
                </div>
                <div class="col-8">
                    <input asp-for="GrasasTotales" class="form-control"  />
                    <span asp-validation-for="GrasasTotales" class="text-danger"></span>
                </div>
            </div>
            <div class="row mt-3">
                <div class="col-4">
                    <label asp-for="Sodio" class="form-label"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Sodio" class="form-control"  />
                </div>
            </div>
            <div class="row mt-3">
                <div class="col-4">
                    <label asp-for="Potasio" class="form-label"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Potasio" class="form-control"  />
                </div>
            </div>
        </div>
        <div class="col-6">
            <div class="row mt-3">
                <div class="col-4">
                    <label asp-for="Fibra" class="form-label"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Fibra" class="form-control"  />
                </div>
            </div>
            <div class="row mt-3">
                <div class="col-4">
                    <label asp-for="Azucar" class="form-label"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Azucar" class="form-control"  />
                </div>
            </div>
            <div class="row mt-3">
                <div class="col-4">
                    <label asp-for="VitaminaA" class="form-label"></label>
                </div>
                <div class="col-8">
                    <input asp-for="VitaminaA" class="form-control"  />
                </div>
            </div>
            <div class="row mt-3">
                <div class="col-4">
                    <label asp-for="VitaminaC" class="form-label"></label>
                </div>
                <div class="col-8">
                    <input asp-for="VitaminaC" class="form-control"  />
                </div>
            </div>
            <div class="row mt-3">
                <div class="col-4">
                    <label asp-for="Calcio" class="form-label"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Calcio" class="form-control"  />
                </div>
            </div>
            <div class="row mt-3">
                <div class="col-4">
                    <label asp-for="Hierro" class="form-label"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Hierro" class="form-control"  />
                </div>
            </div>
            <div class="row mt-3">
                <div class="col-4">
                    <label asp-for="Cantidad" class="text-center form-label"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Cantidad" class="form-control"  />
                    <span asp-validation-for="Cantidad" class="text-danger"></span>
                </div>
            </div>
        </div>
        <div class="row d-flex justify-content-end mt-5">
            <div class="col-3">
                <button type="submit" class="btn btn-warning form-control"> Editar</button>
                &nbsp;
            </div>
            <div class="col-3">
                <a asp-action="Index" class="btn btn-danger form-control"> Volver</a>
            </div>
        </div>
    </div>
</form>
